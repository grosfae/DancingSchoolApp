<Page x:Class="DancingSchoolApp.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DancingSchoolApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                <Button x:Name="StudentBtn" Content="Список студентов" Width="120" Click="StudentBtn_Click"/>
                <Button x:Name="GroupBtn" Content="Список групп" Width="120" Margin="10 0 0 0" Click="GroupBtn_Click"/>
            </StackPanel>
            <Frame x:Name="MenuFrame" Height="430" NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Page>
